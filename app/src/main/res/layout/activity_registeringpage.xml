<RelativeLayout xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="229dp"
        android:layout_height="62dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:text="Create Profile"
        android:textColor="#000000"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/fullNameEditText"
        android:layout_width="314dp"
        android:layout_height="72dp"
        android:layout_below="@id/titleTextView"
        android:layout_marginBottom="16dp"
        android:hint="Full Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="314dp"
        android:layout_height="72dp"
        android:layout_below="@id/fullNameEditText"
        android:layout_marginBottom="16dp"
        android:hint="Email (optional)"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/unameid"
        android:layout_width="314dp"
        android:layout_height="72dp"
        android:layout_below="@+id/emailEditText"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="24dp"
        android:hint="Create Username"
        android:inputType="text" />

    <EditText
        android:id="@+id/bioEditText"
        android:layout_width="333dp"
        android:layout_height="90dp"
        android:layout_below="@id/unameid"
        android:layout_marginTop="10dp"
        android:hint="Bio"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/textView10"
        android:layout_width="395dp"
        android:layout_height="39dp"
        android:layout_below="@+id/bioEditText"
        android:layout_marginTop="20dp"
        android:hint="referral code"
        android:text="Enter referral code" />

    <Button
        android:id="@+id/createProfileButton"
        android:layout_width="384dp"
        android:layout_height="87dp"
        android:layout_below="@id/unameid"
        android:layout_marginTop="190dp"
        android:backgroundTint="#C2650BA8"
        android:text="Update profile"
        android:textColor="#FFFFFF" />

</RelativeLayout>
